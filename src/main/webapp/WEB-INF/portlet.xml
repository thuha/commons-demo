<?xml version="1.0" encoding="UTF-8"?>
<portlet-app version="1.0"
	xmlns="http://java.sun.com/xml/ns/portlet/portlet-app_2_0.xsd"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/portlet/portlet-app_2_0.xsd http://java.sun.com/xml/ns/portlet/portlet-app_2_0.xsd">

	<!-- COMMONS-WEBUI-DEMO-PORTLETS -->
	<portlet>
		<description xml:lang="EN">Demo commons document component
			Portlet</description>
		<portlet-name>DocActivityPortlet</portlet-name>
		<display-name xml:lang="EN">Commons demo WebUI</display-name>
		<portlet-class>org.exoplatform.webui.application.portlet.PortletApplicationController</portlet-class>
		<init-param>
			<name>webui.configuration</name>
			<value>/WEB-INF/conf/portlet/COMMONS/document-conf.xml</value>
		</init-param>
		<expiration-cache>0</expiration-cache>
		<supports>
			<mime-type>text/html</mime-type>
			<portlet-mode>edit</portlet-mode>
			<portlet-mode>help</portlet-mode>
		</supports>
		<supported-locale>en</supported-locale>
		<portlet-info>
			<title>Demo Document UI Component</title>
			<short-title>DocumentComp</short-title>
			<keywords>Demo COMMONS</keywords>
		</portlet-info>
		<portlet-preferences>
			<preference>
				<name>text</name>
				<value>Demo COMMONS</value>
				<read-only>false</read-only>
			</preference>
		</portlet-preferences>
	</portlet>

	<!-- WEBUI BASIC PORTLETS: Test new features or improvements in GateIn -->
	<portlet>
		<description xml:lang="EN">Hello world WebUI-Portlet</description>
		<portlet-name>BasicPortlet</portlet-name>
		<display-name xml:lang="EN">Hello world WebUI</display-name>
		<portlet-class>org.exoplatform.webui.application.portlet.PortletApplicationController</portlet-class>
		<init-param>
			<name>webui.configuration</name>
			<value>/WEB-INF/conf/portlet/BasicPortlet/webui/configuration.xml</value>
		</init-param>
		<expiration-cache>0</expiration-cache>
		<supports>
			<mime-type>text/html</mime-type>
			<portlet-mode>edit</portlet-mode>
			<portlet-mode>help</portlet-mode>
		</supports>
		<supported-locale>en</supported-locale>
		<resource-bundle>locale.portlet.BasicPortlet.BasicPortlet</resource-bundle>
		<portlet-info>
			<title>Hello world WebUI-Portlet</title>
			<short-title>Hello-WebUI-Portlet</short-title>
			<keywords>Demo Portlet</keywords>
		</portlet-info>
		<portlet-preferences>
			<preference>
				<name>text</name>
				<value>Hello World</value>
				<read-only>false</read-only>
			</preference>
		</portlet-preferences>
	</portlet>
</portlet-app>
